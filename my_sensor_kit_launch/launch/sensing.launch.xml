<launch>
  <arg name="launch_driver" default="true" description="do launch driver"/>
  <arg name="vehicle_mirror_param_file" description="path to the file of vehicle mirror position yaml"/>
  <arg name="pointcloud_container_name" default="pointcloud_container"/>
  <arg name="vehicle_id" default="$(env VEHICLE_ID default)"/>

  <group>
    <!-- Top LiDAR -->
    <include file="$(find ouster_ros)/launch/sensor.launch.xml" />

    <!-- Front LiDAR -->
    <include file="$(find livox_ros_driver2)/launch/rviz_HAP_launch.py" />
    
    <!-- Corner Cameras -->
    <include file="$(find arena_camera)/launch/arena_camera_node_multi_device.launch" />
    <node name="corner_cameras_image_converter" pkg="arena_camera" type="corner_cameras_image_converter_e4.py" />
    
    
    <!-- Front Camera -->
    <include file="$(find depthai_ros_driver)/launch/rgbd_pcl.launch" />

    <!-- Vehicle Velocity Converter  -->
    <include file="$(find-pkg-share vehicle_velocity_converter)/launch/vehicle_velocity_converter.launch.xml">
      <arg name="input_vehicle_velocity_topic" value="/vehicle/status/velocity_status"/>
      <arg name="output_twist_with_covariance" value="/sensing/vehicle_velocity_converter/twist_with_covariance"/>
    </include>
  </group>
</launch>
